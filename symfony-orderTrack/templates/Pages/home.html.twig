{% extends "base.html.twig" %}

{% block title %}SymOrderTrack - Accueil
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<div class="recipes">
			<h2 class="mt-4 text-center">
				Les articles
			</h2>
			<div class="d-flex justify-content-center flex-wrap">
				{% for article in articles %}
					<div class="card border-warning mt-3 mx-2" style="max-width: 25rem;">
						<div class="card-header">Article n°{{ article.id }}</div>
						<div class="card-body">
							<h4 class="card-title">
								<a href="{{ path('article.show', {id: article.id}) }}" class="text-warning">{{ article.name }}</a>
							</h4>
							<p class="card-text">{{ article.description|slice(0, 100) ~ '...' }}</p>
							<p class="mt-3">Prix (en €) :
								<span class="badge bg-warning">{{ article.price }}</span>
							</p>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
