{% extends 'base.html.twig' %}

{% block title %}SymRecipe - Mes recettes
{% endblock %}

{% block body %}
<div class="container mt-4">
	{% if not recipes.items is same as ([])%}
		<h1>Mes recettes</h1>
		<div class="count mt-4">
			<h4>il y a
				{{recipes.getTotalItemCount}}
				ingrédients au total</h4>
		</div>
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">Numéro</th>
					<th scope="col">Nom</th>
					<th scope="col">Prix</th>
					<th scope="col">Difficulty</th>
					<th scope="col">Description</th>
					<th scope="col">Date de création</th>
					<th scope="col">Edition</th>
					<th scope="col">Suppresion</th>
				</tr>
			</thead>
			<tbody>
				{% for recipe in recipes %}
					<tr class="table-primary">
						<th scope="row">{{  recipe.id }}</th>
						<td>{{  recipe.name }}</td>
						<td>
							{% if recipe.price is null %}
								Non renseigné
							{% else %}
								{{ recipe.price|number_format(2, '.', ',') }}
								€
							{% endif %}
						</td>
						<td>
							{% if recipe.difficulty is null %}
								Non renseigné
							{% else %}
								{{ recipe.difficulty }}
							{% endif %}
						</td>
						<td>{{  recipe.description }}</td>
						<td>{{  recipe.createdAt|date('d/m/Y') }}</td>
						<td>
							<a href="" class="btn btn-info">Modifier</a>

						</td>
						<td>
							<a href="#" class="btn btn-warning">Supprimer</a</td>
						</td>
					</tr>
				</tbody>
			</tbody>
		</tr>

	</tbody>
</tr>{% endfor %}</tbody></table><div class="navigation d-flex justify-content-center mt-4">{{ knp_pagination_render(recipes) }}{% else %}<h4>il n'y pas de recettes</h4>{% endif %}</div>{% endblock %}
